{% extends 'CPLoggerCoreBundle::layouts/default.html.twig' %}

{% block body -%}
    <div class="page-header">
        <h1>Log list</h1>
    </div>

    <table class="records_list table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Event</th>
                <th>Message</th>
                <th>Rawresponse</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('log_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.event }}</td>
                <td>{{ entity.message }}</td>
                <td>{{ entity.rawResponse }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('log_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('log_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        
{% endblock %}
