{% extends 'CPLoggerCoreBundle::layouts/signin.html.twig' %}

{% block body -%}
    <div class="page-header">
        <h1>User creation</h1>
    </div>

    {{ form_errors(form) }}
    <form action="{{ path('users_create') }}" method="post" {{ form_enctype(form) }} class="form-horizontal" role="form">
        <div class="form-group">
            {{ form_label(form.email, null, { "label_attr" : { "class": "col-lg-2 control-label" }}) }}
            <div class="col-lg-10">
                {{ form_widget(form.email, { "attr" : { "class" : "form-control" }}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.password, null, { "label_attr" : { "class": "col-lg-2 control-label" }}) }}
            <div class="col-lg-10">
                {{ form_widget(form.password, { "attr" : { "class" : "form-control" }}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.password_confirm, null, { "label_attr" : { "class": "col-lg-2 control-label" }}) }}
            <div class="col-lg-10">
                {{ form_widget(form.password_confirm, { "attr" : { "class" : "form-control" }}) }}
            </div>
        </div>

        {{ form_rest(form) }}

        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="submit" class="btn btn-primary">Create</button>
                <a href="{{ path('users') }}" class="btn btn-default">Cancel</a>
            </div>
        </div>
    </form>
{% endblock %}
