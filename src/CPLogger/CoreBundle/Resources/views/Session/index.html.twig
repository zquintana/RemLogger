{% extends "CPLoggerCoreBundle::layouts/signin.html.twig" %}

{% block title %}CPLoggerCoreBundle:Session:index{% endblock %}

{% block body %}
<div class="page-header">
	<h1>Sign In</h1>
</div>

<form action="{{ path('signin') }}" method="post" {{ form_enctype(form) }} class="form-horizontal" role="form">
	<div class="form-group">
		{{ form_label(form.email, null, { "label_attr" : { "class": "col-lg-2 control-label" }}) }}
		<div class="col-lg-10">
			{{ form_widget(form.email, { "attr" : { "class" : "form-control" }}) }}
		</div>
	</div>
	<div class="form-group">
		{{ form_label(form.password, null, { "label_attr" : { "class": "col-lg-2 control-label" }}) }}
		<div class="col-lg-10">
			{{ form_widget(form.password, { "attr" : { "class" : "form-control" }}) }}
		</div>
	</div>
    <div class="form-group">
    	<div class="col-lg-10 col-lg-offset-2">
        	<button type="submit" class="btn btn-default">Sign In</button>
        </div>
    </div>
</form>
{% endblock %}
